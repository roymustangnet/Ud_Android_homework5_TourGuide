<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/attractions"
        style="@style/TextViewMainItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_attractions" />

    <TextView
        android:id="@+id/food"
        style="@style/TextViewMainItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_food" />

    <TextView
        android:id="@+id/hotel"
        style="@style/TextViewMainItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_hotel" />

    <TextView
        android:id="@+id/souvenir"
        style="@style/TextViewMainItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_souvenir" />
</LinearLayout>