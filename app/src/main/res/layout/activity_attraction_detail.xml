<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AttractionDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_image_height"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/att_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_image_margin"
            android:layout_marginTop="@dimen/item_image_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/detail_name_text_size" />

        <TextView
            android:id="@+id/att_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_image_margin"
            android:layout_marginTop="@dimen/item_image_margin"
            android:textSize="@dimen/detail_text_size" />
    </LinearLayout>


</ScrollView>